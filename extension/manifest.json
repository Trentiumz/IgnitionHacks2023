{
    "name": "Gnostic",
    "description": "From Notion notes to quizzes.",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "notifications",
     	"webRequest",
   	    "activeTab",
        "scripting"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "16": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.notion.so/*"
            ],
            "js": [
                "background.js"
            ]
        }
    ]
}